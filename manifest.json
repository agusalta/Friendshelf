{
  "manifest_version": 3,
  "name": "Buscar Reseñas",
  "version": "1.0",
  "description": "Extensión para buscar reseñas de texto seleccionado.",
  "permissions": ["activeTab", "contextMenus", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
