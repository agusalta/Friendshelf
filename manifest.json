{
  "manifest_version": 3,
  "name": "Friendshelf",
  "version": "2.0",
  "description": "Your softwaredeals and reviews application",
  "permissions": ["activeTab", "contextMenus", "storage", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "scripts": ["popup.js", "authentication.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
