{
  "manifest_version": 3,
  "name": "Friendshelf",
  "version": "1.0",
  "description": "Your software deals and reviews application",
  "permissions": ["activeTab", "contextMenus", "storage", "scripting", "tabs"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "scripts": ["popup.js", "authentication.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
